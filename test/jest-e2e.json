{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@taskmanager/(.*)$": [
      "<rootDir>/../src/$1",
      "<rootDir>/../src/dtos/$1"
    ]
  }
}
